<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="imageUploader">
        <attr name="Preview" format="string"/>
        <attr name="Title" format="string"/>
        <attr name="ShowTitleTop" format="boolean"/>
        <attr name="SubTitle" format="string"/>
        <attr name="SubTitleColor" format="color"/>
        <attr name="CornerRadius" format="dimension"/>
        <attr name="StrokeWidth" format="integer"/>
        <attr name="StrokeColor" format="color"/>
        <attr name="BoxBackColor" format="color"/>
        <attr name="TitleSize" format="dimension"/>
        <attr name="TitleTopSize" format="dimension"/>
        <attr name="ImageMargin" format="dimension"/>
<!--        <attr name="BorderColor" format="color"/>-->

        <attr name="ScaleMode" format="enum">
        <enum name="Default" value="0"/>
        <enum name="Stretch" value="1"/>
        </attr>

        <attr name="android:scaleType"/>
        <attr name="android:typeface"/>
        <attr name="android:textSize"/>
        <attr name="android:textColor"/>
    </declare-styleable>
</resources>